<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
    <style>
        .navbar .dropdown-menu .form-control {
            width: 200px;
        }

        [data-toggle="collapse"][aria-expanded="true"] > .js-rotate-if-collapsed {
            -webkit-transform: rotate(0deg);
            -moz-transform: rotate(0deg);
            -ms-transform: rotate(0deg);
            -o-transform: rotate(0deg);
            transform: rotate(0deg);
        }

        #txtFilter {
            width: 50px;
            font-size: small;
            text-align: center;
        }

        [data-href] {
            cursor: pointer;
        }

        th {
            text-align: center;
        }

        #tdRow {
            text-align: center;
            vertical-align: middle;
        }
    </style>
</head>
<body>
    <div>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="~/Home/Index">AGT Proje</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav justify-content-end">
                    <li class="nav-item">
                        <a class="nav-link" href="~/Home/Index">Anasayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Product/Index">Ürünler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Customer/Index">Müşteriler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Report/Index">Raporlama İşlemleri</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    <div class="table-responsive">
        <table class="table">
            <tr>
                <td style="width:200px;">
                    <div id="accordion">
                        <div class="card">
                            <div class="card-header" id="headingTwo">
                                <h5 class="mb-0">
                                    <a style="text-decoration:none;color:cornflowerblue;" href="~/Report/Index" class="btn btn-link collapsed" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                        Tüm Siparişler
                                    </a>
                                </h5>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header" id="headingThree">
                                <h5 class="mb-0">
                                    <a style="text-decoration:none;color:cornflowerblue;" href="~/Report/Date" class="btn btn-link collapsed" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                        Tarihe Göre
                                    </a>
                                </h5>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header" id="headingFour">
                                <h5 class="mb-0">
                                    <a style="text-decoration:none;color:cornflowerblue;" href="~/Report/Price" class="btn btn-link collapsed" data-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                                        Fiyata Göre
                                    </a>
                                </h5>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header" id="headingFive">
                                <h5 class="mb-0">
                                    <a style="text-decoration:none;color:cornflowerblue;" href="~/Report/Unsold" class="btn btn-link collapsed" data-target="#collapseFive" aria-expanded="false" aria-controls="collapseFive">
                                        Hiç Satılmayanlar
                                    </a>
                                </h5>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header" id="headingSix">
                                <h5 class="mb-0">
                                    <a style="text-decoration:none;color:cornflowerblue;" href="~/Report/BestSelling" class="btn btn-link collapsed" data-target="#collapseSix" aria-expanded="false" aria-controls="collapseSix">
                                        En çok Satılanlar
                                    </a>
                                </h5>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header" id="headingSeven">
                                <h5 class="mb-0">
                                    <a style="text-decoration:none;color:cornflowerblue;" href="~/Report/Active" class="btn btn-link collapsed" data-target="#collapseSeven" aria-expanded="false" aria-controls="collapseSeven">
                                        Aktif Müşteriler
                                    </a>
                                </h5>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header" id="headingEight">
                                <h5 class="mb-0">
                                    <a style="text-decoration:none;color:cornflowerblue;" href="~/Report/Passive" class="btn btn-link collapsed" data-target="#collapseEight" aria-expanded="false" aria-controls="collapseEight">
                                        Pasif Müşteriler
                                    </a>
                                </h5>
                            </div>
                        </div>
                    </div>
                </td>
                <td>
                    <div class="body-content">
                        @RenderBody()
                    </div>
                </td>
            </tr>
        </table>
    </div>
</body>
</html>