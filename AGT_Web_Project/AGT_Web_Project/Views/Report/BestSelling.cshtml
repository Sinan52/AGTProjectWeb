@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<Entities.SelectByBestSellingProduct_Result>
@{
    ViewBag.Title = "BestSelling";
    Layout = "~/Views/Shared/_FilterLayout.cshtml";
}
<h2>En çok Satılan Ürünler</h2>
<hr />

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Ürün Id</th>
            <th>Ürün İsmi</th>
            <th>Toplam</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td id="tdRow">@item.ProductId</td>
            <td id="tdRow" nowrap>@item.ProductName</td>
            <td id="tdRow" nowrap>@item.TOTAL</td>
        </tr>
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("BestSelling", new { page }))